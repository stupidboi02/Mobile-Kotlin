<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textResult"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:background="#E4DEDE"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInput" />
    <EditText
        android:id="@+id/textInput"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:background="#E4DEDE"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button22"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/material_on_surface_stroke"
        android:text="CE"
        android:textColor="@color/black"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textResult" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/button23"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="C"
        android:layout_marginLeft="5dp"

        app:layout_constraintStart_toEndOf="@+id/button22"
        app:layout_constraintTop_toTopOf="@+id/button22" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/button24"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="BS"
        android:layout_marginLeft="5dp"

        app:layout_constraintStart_toEndOf="@+id/button23"
        app:layout_constraintTop_toTopOf="@+id/button23" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btnd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="/"
        android:layout_marginLeft="5dp"

        app:layout_constraintStart_toEndOf="@+id/button24"
        app:layout_constraintTop_toTopOf="@+id/button24" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:text="7"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button22" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/button23" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/button24" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btnm"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="x"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnd" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="4"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="6"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btnsub"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="-"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btnm" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btnadd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="+"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btnsub" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/button38"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="+/-"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btn0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="0"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/button38"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btn."
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="."
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:background="@color/material_on_surface_stroke"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/btnequal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="="
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/btn."
        app:layout_constraintTop_toBottomOf="@+id/btnadd" />

</androidx.constraintlayout.widget.ConstraintLayout>